<section id="videokoulutukset" class="bg-white pt-16">
  <div class="container mx-auto px-2 pt-4 pb-16 text-gray-800">
    <h2 class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-800">
      Videokoulutukset
    </h2>
  </div>
</section>

<section class="bg-white flex flex-wrap flex-row justify-center pb-32">
  <div class="grid grid-cols-1 lg:grid-cols-2 justify-items-center w-full max-w-6xl gap-x-14 gap-y-14 mx-16">
  {%- for product in collections.products %}
  {% if product.data.type == "video" %}
      <a href="{{ product.url }}" class="relative block overflow-hidden rounded-xl shadow-xl w-full max-w-3xl border border-gray-300 p-8 transition ease-in-out hover:-translate-y-1 hover:scale-105 bg-white hover:bg-neutral hover:drop-shadow-lg duration-50">
        <span
          class="absolute inset-x-0 bottom-0 h-2 bg-gradient-to-r from-primary via-neutral to-secondary"></span>

        <div class="justify-between sm:flex">
          <div>
            <h3 class="text-xl font-bold text-gray-900">
              {{ product.data.title }}
            </h3>

            <p class="mt-1 text-sm font-medium text-gray-600">Kouluttaja <span class="font-bold text-gray-700">{{ product.data.educator }}</span></p>
          </div>

          <div class="ml-3 hidden flex-shrink-0 sm:block">
            <img alt="{{ product.data.educator }} -henkilön kuva" src="/assets/avatar/{{product.data.avatar}}.jpg" 
            class="h-16 w-16 rounded-lg object-cover shadow-sm" />
          </div>
        </div>

        <div class="mt-4 sm:pr-8">
          <p class="text-sm text-gray-500">
            {{ product.data.excerpt }}
          </p>
        </div>

        <dl class="mt-6 flex">
          <div class="flex flex-col-reverse">
            <dt class="text-xs font-medium text-gray-600">Julkaisupäivämäärä</dt>
            <dd class="text-sm font-bold text-gray-700">{{ product.data.releaseDate }}</dd>
          </div>

          <div class="ml-3 flex flex-col-reverse sm:ml-6">
            <dt class="text-xs font-medium text-gray-600">Videon kesto</dt>
            <dd class="text-sm font-bold text-gray-700">{{ product.data.length }}</dd>
          </div>
        </dl>
      </a>
    {% endif %}
  {% endfor -%}
  </div>
</section>